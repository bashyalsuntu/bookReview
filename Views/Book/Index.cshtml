@model IEnumerable<BookReviewApp.Models.Book>

@{
    ViewData["Title"] = "Books List";
}


<div class="container">
    <h1 class="mb-4 text-center">Book List</h1>
    <div class="table-responsive">
        <table class="table table-bordered table-hover custom-table">
            <thead class="table-success">
                <tr>
                    <th>SN</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Average Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int sn = 1; // Initialize serial number
                }
                @foreach (var book in Model)
                {
                    <tr class="bg-light-green">
                        <td>@sn</td>
                        <td>@book.Title</td>
                        <td>@book.Description</td>
                        <td><strong>@book.AverageRating</strong></td>
                        <td>
                            <a href="@Url.Action("Details", "Book", new { id = book.Id })" class="btn btn-lg btn-success">
                                View Details
                            </a>
                        </td>
                    </tr>
                    sn++; // Increment serial number
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .custom-table {
        border-collapse: collapse;
        width: 100%;
        font-size: 1.3rem;
    }

        .custom-table th {
            background-color: #28a745; /* Green header */
            color: white;
            padding: 15px;
            text-align: center;
            border: 2px solid #ddd; /* Column border */
            font-size: 1.5rem; /* Larger font for headers */
            font-weight: bold;
        }

        .custom-table td {
            padding: 12px;
            text-align: center;
            border: 2px solid #ddd; /* Column border */
            font-size: 1.2rem; /* Slightly smaller than headers but larger than default */
        }

        .custom-table tbody tr:nth-child(even) {
            background-color: #f2f2f2; /* Light gray alternate rows */
        }

        .custom-table tbody tr:hover {
            background-color: #c3e6cb; /* Light green hover */
        }

</style>
